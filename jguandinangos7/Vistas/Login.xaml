<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jguandinangos7.Vistas.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text=" VENTANA DE LOGIN" FontSize="18" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario" />
            <Entry x:Name="txtContraseña" Placeholder="Ingrese la contraseña" IsPassword="True" />
            <Button x:Name="btnInicio" Text="Iniciar Secion" Clicked="btnInicio_Clicked"/>
            <Button x:Name="btnCancelar" Text="Registro" Clicked="btnCancelar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>